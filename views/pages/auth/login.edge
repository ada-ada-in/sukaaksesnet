<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SUKA AKSES NET</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .input-group {
            position: relative;
        }
        
        .input-group input:focus + label,
        .input-group input:not(:placeholder-shown) + label {
            transform: translateY(-25px) scale(0.8);
            color: #667eea;
        }
        
        .input-group label {
            position: absolute;
            left: 12px;
            top: 12px;
            transition: all 0.2s ease;
            pointer-events: none;
            color: #9ca3af;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            font-weight: bold;
        }
        
        .logo-text {
            font-size: 20px;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1;
        }
        
        .logo-subtext {
            font-size: 10px;
            color: #666;
            margin-top: -2px;
        }
        
        .show-password {
            cursor: pointer;
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
        }
        
        .show-password:hover {
            color: #667eea;
        }
        
        .social-btn {
            transition: all 0.3s ease;
        }
        
        .social-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .whatsapp-float {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 20px;
            right: 20px;
            background-color: #25d366;
            color: #FFF;
            border-radius: 50px;
            text-align: center;
            font-size: 30px;
            box-shadow: 2px 2px 3px #999;
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }
        
        .whatsapp-float:hover {
            transform: scale(1.1);
            background-color: #128C7E;
        }
        
        .left-panel {
            background-image: url('https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
        }
        
        .left-panel::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
        }
        
        .left-panel-content {
            position: relative;
            z-index: 1;
        }
        
        @media (max-width: 768px) {
            .left-panel {
                display: none;
            }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm fixed top-0 w-full z-40">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <div class="logo-container">
                    <div class="logo-icon">
                        <i class="fas fa-wifi"></i>
                    </div>
                    <div>
                        <div class="logo-text">SUKA AKSES</div>
                        <div class="logo-subtext">INTERNET PROVIDER</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="flex min-h-screen pt-16">
        <!-- Left Panel - Background Image -->
        <div class="left-panel w-1/2 hidden lg:flex items-center justify-center">
            <div class="left-panel-content text-white text-center p-12">
                <div class="mb-8">
                    <div class="w-24 h-24 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-wifi text-5xl"></i>
                    </div>
                    <h1 class="text-4xl font-bold mb-4">SUKA AKSES NET</h1>
                    <p class="text-xl opacity-90">Internet Cepat dan Stabil untuk Semua Kebutuhan</p>
                </div>
                
                <div class="grid grid-cols-3 gap-6 mt-12">
                    <div class="text-center">
                        <div class="text-3xl font-bold">10K+</div>
                        <div class="text-sm opacity-75">Pelanggan Aktif</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">99.9%</div>
                        <div class="text-sm opacity-75">Uptime</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">24/7</div>
                        <div class="text-sm opacity-75">Support</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Panel - Login Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
            <div class="w-full max-w-md">
                <!-- Login Card -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <!-- Card Header -->
                    <div class="gradient-bg text-white p-8 text-center">
                        <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-user-circle text-4xl"></i>
                        </div>
                        <h2 class="text-2xl font-bold mb-2">Selamat Datang Kembali</h2>
                        <p class="opacity-90">Masuk ke akun SUKA AKSES NET Anda</p>
                    </div>
                    
                    <!-- Card Body -->
                    <div class="p-8">
                        <form id="loginForm">
                            <!-- Email Input -->
                            <div class="input-group mb-6">
                                <input type="email" id="email" placeholder=" " class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500 transition">
                                <label for="email">Email</label>
                            </div>
                            
                            <!-- Password Input -->
                            <div class="input-group mb-6">
                                <input type="password" id="password" placeholder=" " class="w-full px-3 py-3 pr-10 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500 transition">
                                <label for="password">Password</label>
                                <i class="fas fa-eye show-password" onclick="togglePassword()"></i>
                            </div>
                            
                            <!-- Remember Me & Forgot Password -->
                            <div class="flex justify-between items-center">
                                <label class="flex items-center">
                                    <input type="checkbox" class="mr-2 rounded text-indigo-600 focus:ring-indigo-500">
                                    <span class="text-sm text-gray-600">Ingat saya</span>
                                </label>
                                <a href="#" class="text-sm text-indigo-600 hover:text-indigo-700">Lupa password?</a>
                            </div>
                            
                            <!-- Login Button -->
                            <button type="submit" class="w-full btn-gradient text-white py-3 rounded-lg font-semibold mb-6">
                                Masuk
                            </button>
                            
                            <!-- Divider -->
                            <div class="relative mb-6">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-gray-300"></div>
                                </div>
                                <div class="relative flex justify-center text-sm">
                                    <span class="px-2 bg-white text-gray-500">Atau masuk dengan</span>
                                </div>
                            </div>

                            
                            <!-- Register Link -->
                            <p class="text-center text-sm text-gray-600">
                                Belum punya akun? 
                                <a href="register.html" class="text-indigo-600 hover:text-indigo-700 font-medium">Daftar sekarang</a>
                            </p>
                        </form>
                    </div>
                </div>
                
                <!-- Info Card -->
                <div class="mt-8 bg-white rounded-xl shadow-md p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-shield-alt text-green-600"></i>
                            </div>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-gray-800">Keamanan Terjamin</h3>
                            <p class="text-sm text-gray-600 mt-1">Kami menggunakan enkripsi SSL untuk melindungi data pribadi Anda</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- WhatsApp Float Button -->
    <a href="https://wa.me/6281234567890?text=Halo,%20saya%20butuh%20bantuan%20login" target="_blank" class="whatsapp-float">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- Success/Error Message Container -->
    <div id="messageContainer" class="fixed top-20 right-4 z-50"></div>

    <script>
        // Toggle Password Visibility
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon = document.querySelector('.show-password');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        }
        
        // Show Message Function
        function showMessage(message, type = 'success') {
            const messageContainer = document.getElementById('messageContainer');
            const messageDiv = document.createElement('div');
            
            const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
            
            messageDiv.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg mb-4 flex items-center`;
            messageDiv.innerHTML = `
                <i class="fas ${icon} mr-3"></i>
                <span>${message}</span>
            `;
            
            messageContainer.appendChild(messageDiv);
            
            // Remove message after 3 seconds
            setTimeout(() => {
                messageDiv.remove();
            }, 3000);
        }
        
        // Form Validation and Submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Simple validation
            if (!email || !password) {
                showMessage('Silakan isi semua field!', 'error');
                return;
            }
            
            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showMessage('Format email tidak valid!', 'error');
                return;
            }
            
            // Simulate login process
            const submitButton = e.target.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.textContent = 'Memproses...';
            submitButton.disabled = true;
            
            setTimeout(() => {
                // Simulate successful login
                showMessage('Login berhasil! Mengalihkan...', 'success');
                
                // Redirect to dashboard after 2 seconds
                setTimeout(() => {
                    // In real application, redirect to dashboard
                    // window.location.href = 'dashboard.html';
                    showMessage('Login berhasil! (Demo mode)', 'success');
                }, 2000);
                
                submitButton.textContent = originalText;
                submitButton.disabled = false;
            }, 1500);
        });
        
        // Social Login Handlers
        document.querySelector('.social-btn:first-child').addEventListener('click', function() {
            showMessage('Login dengan Google (Demo)', 'success');
        });
        
        document.querySelector('.social-btn:last-child').addEventListener('click', function() {
            showMessage('Login dengan Facebook (Demo)', 'success');
        });
        
        // Forgot Password Handler
        document.querySelector('a[href="#"]').addEventListener('click', function(e) {
            if (this.textContent.includes('Lupa password')) {
                e.preventDefault();
                showMessage('Link reset password telah dikirim ke email Anda (Demo)', 'success');
            }
        });
    </script>
</body>
</html>